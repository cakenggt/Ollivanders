package Spell;

import me.cakenggt.Ollivanders.Ollivanders;
import me.cakenggt.Ollivanders.Spells;
import me.cakenggt.Ollivanders.Transfiguration;

import org.bukkit.Material;
import org.bukkit.entity.Player;
import org.bukkit.inventory.ItemStack;


/**Changes color of sheep and colorable blocks
 * @author lownes
 *
 */
public class CALAMUS extends Transfiguration implements Spell{

	public CALAMUS(Ollivanders plugin, Player player, Spells name,
			Double rightWand) {
		super(plugin, player, name, rightWand);
	}

	public void checkEffect() {
		if(player.getInventory().contains(Material.STICK, 1)){
			for(int i = 0; i < player.getInventory().getSize(); i++){
			 ItemStack j = player.getInventory().getItem(i);
			if(j.getType() == Material.STICK  && j.getItemMeta().getDisplayName() != "Wand"){
				j.setType(Material.ARROW);
				break;
			}
			
			}
		}
		else{return;}
			
	}
	
}
